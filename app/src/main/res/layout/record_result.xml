<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--이러닝 로고 표시 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/erunning_dirty_logo" />

    </LinearLayout>

    <!--운동 기록 날짜, 시간 표시 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnCancel"
            android:text="닫기"/>

        <TextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="날짜"
            android:gravity="center"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnShare"
            android:text="공유"/>

    </LinearLayout>

    <!--지도 화면-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5">

        <include layout="@layout/google_map" />

    </LinearLayout>

    <!--운동 정보 표시 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <!--값-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/rstextTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="00:00:00"
                android:textSize="24sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/rstextDistance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0.00"
                android:textSize="24sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/rstextStep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/rstextCalories"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center" />
        </LinearLayout>

        <!--타이틀-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/rstextTimeTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="시간 (시:분:초)"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/rstextDistanceTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="거리 (km)"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/rstextStepTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="걸음수 (보)"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/rstextCaloriesTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="칼로리 (kcal)"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <!--특징 등록 팝업창-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rsTextFeature"
            android:text="특징 글이 없습니다."
            android:textSize="18dp">

        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rsImageFeature">

        </ImageView>

    </LinearLayout>

</LinearLayout>